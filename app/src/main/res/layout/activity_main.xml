<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/blue_200"
    >

<!--    adding 3 hearts images-->
    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        >
<com.google.android.material.imageview.ShapeableImageView
    android:id="@+id/main_IMG_heart1"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight = "1"
    app:srcCompat="@drawable/ic_icon_heart"

    />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/main_IMG_heart2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight = "1"
        android:layout_marginStart="10dp"
        app:srcCompat="@drawable/ic_icon_heart"

        />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/main_IMG_heart3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight = "1"
        android:layout_marginStart="10dp"
        app:srcCompat="@drawable/ic_icon_heart"

        />
    </LinearLayout>


<!--    score - as a text view-->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/main_LBL_score"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="000"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />


<!--    adding a new picture-->

    <com.google.android.material.imageview.ShapeableImageView
        android.id="@+id/main_IMG_flag"
        android:layout_width="280dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/ic_launcher_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:layout_marginHorizontal="16dp"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_BTN_yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:layout_weight = "1"

        />

        <View
            android:layout_width="17dp"
            android:layout_height="1dp"

            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_BTN_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="No"
            android:layout_weight = "1"

            />
    </LinearLayout>

</RelativeLayout>